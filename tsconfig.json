{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@libs/entities": [
        "libs/entities/src"
      ],
      "@libs/entities/*": [
        "libs/entities/src/*"
      ],
      "@libs/dtos": [
        "libs/dtos/src"
      ],
      "@libs/dtos/*": [
        "libs/dtos/src/*"
      ],
      "@libs/websocket": [
        "libs/websocket/src"
      ],
      "@libs/websocket/*": [
        "libs/websocket/src/*"
      ],
      "@libs/constants": [
        "libs/constants/src"
      ],
      "@libs/constants/*": [
        "libs/constants/src/*"
      ],
      "@libs/auth": [
        "libs/auth/src"
      ],
      "@libs/auth/*": [
        "libs/auth/src/*"
      ],
      "@libs/repositories": [
        "libs/repositories/src"
      ],
      "@libs/repositories/*": [
        "libs/repositories/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.d.ts"
  ]
}
