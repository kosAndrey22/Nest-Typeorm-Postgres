{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "paths": {
      "@libs/constants": ["libs/constants/src"],
      "@libs/constants/*": ["libs/constants/src/*"],
      "@libs/db": ["libs/db/src"],
      "@libs/db/*": ["libs/db/src/*"],
      "@libs/dtos": ["libs/dtos/src"],
      "@libs/dtos/*": ["libs/dtos/src/*"],
      "@libs/interfaces": ["libs/interfaces/src"],
      "@libs/interfaces/*": ["libs/interfaces/src/*"]
    }
  },
  "exclude": ["node_modules", "**/*.d.ts"]
}
